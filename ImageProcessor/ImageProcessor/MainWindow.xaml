<Window x:Class="ImageProcessor.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ImageProcessor"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Button x:Name="SendMessageButton" Content="Отправить сообщение" HorizontalAlignment="Center" VerticalAlignment="Top" Width="152" Height="47" Click="SendMessageButton_Click" Margin="0,258,0,0"/>
        <TextBox x:Name="IpTextBox" HorizontalAlignment="Center" TextWrapping="Wrap" VerticalAlignment="Center" Width="152" Height="35"/>
        <Button x:Name="ChooseFileButton" Content="Выбрать файл" HorizontalAlignment="Center" Margin="0,135,0,0" VerticalAlignment="Top" Width="152" Height="33" Click="ChooseFileButton_Click"/>
        <Image x:Name="ProcessedImage" HorizontalAlignment="Left" Height="192" Margin="606,119,0,0" VerticalAlignment="Top" Width="135"/>
        <Image x:Name="OpenedImage" HorizontalAlignment="Left" Height="192" Margin="56,119,0,0" VerticalAlignment="Top" Width="135"/>
    </Grid>
</Window>